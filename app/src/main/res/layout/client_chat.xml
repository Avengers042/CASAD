<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/top_bar"
            android:layout_width="437dp"
            android:layout_height="52dp"
            android:layout_marginBottom="500dp"
            android:background="@drawable/container_second_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/top_bar6"
            android:layout_width="437dp"
            android:layout_height="52dp"
            android:background="@drawable/container_second_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="681dp" />

        <View
            android:id="@+id/top_bar2"
            android:layout_width="258dp"
            android:layout_height="116dp"
            android:background="@drawable/container_second_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.895"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_bar4"
            app:layout_constraintVertical_bias="0.041" />

        <View
            android:id="@+id/top_bar4"
            android:layout_width="258dp"
            android:layout_height="96dp"
            android:background="@drawable/container_second_border"
            android:backgroundTint="#BDF9BF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.104"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_bar"
            app:layout_constraintVertical_bias="0.059" />

        <View
            android:id="@+id/top_bar5"
            android:layout_width="258dp"
            android:layout_height="56dp"
            android:background="@drawable/container_second_border"
            android:backgroundTint="#BDF9BF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.104"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_bar2"
            app:layout_constraintVertical_bias="0.064" />

        <View
            android:id="@+id/top_bar3"
            android:layout_width="258dp"
            android:layout_height="56dp"
            android:background="@drawable/container_second_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.895"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_bar5"
            app:layout_constraintVertical_bias="0.075" />

        <View
            android:id="@+id/top_bar7"
            android:layout_width="260dp"
            android:layout_height="33dp"
            android:background="@drawable/container_second_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.536"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/top_bar6"
            app:layout_constraintVertical_bias="0.526" />

        <View
            android:id="@+id/comment_container13"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/arrow_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_bar" />

        <View
            android:id="@+id/container_bar"
            android:layout_width="487dp"
            android:layout_height="180dp"
            android:layout_marginBottom="551dp"
            android:background="@drawable/input_container"
            android:backgroundTint="@color/green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/search_input"
            android:layout_width="329dp"
            android:layout_height="47dp"
            android:background="@drawable/input_container"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/container_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.508" />

        <ImageView
            android:id="@+id/logo_search"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/search_bar"
            app:layout_constraintBottom_toBottomOf="@+id/search_input"
            app:layout_constraintEnd_toEndOf="@+id/search_input"
            app:layout_constraintHorizontal_bias="0.029"
