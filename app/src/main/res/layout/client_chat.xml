            app:layout_constraintTop_toTopOf="@+id/search_input" />

        <ImageView
            android:id="@+id/logo_search2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/search_bar"
            app:layout_constraintBottom_toBottomOf="@+id/top_bar6"
            app:layout_constraintTop_toTopOf="@+id/top_bar6"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/karla"
            android:text="Filtros"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/container_bar"
            app:layout_constraintEnd_toEndOf="@+id/container_bar"
            app:layout_constraintHorizontal_bias="0.741"
            app:layout_constraintStart_toStartOf="@+id/container_bar"
            app:layout_constraintTop_toTopOf="@+id/container_bar"
            app:layout_constraintVertical_bias="0.788" />

        <ImageView
            android:id="@+id/logo_filter"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/filter"
            app:layout_constraintBottom_toBottomOf="@+id/container_bar"
            app:layout_constraintEnd_toEndOf="@+id/container_bar"
            app:layout_constraintHorizontal_bias="0.818"
            app:layout_constraintStart_toStartOf="@+id/container_bar"
            app:layout_constraintTop_toTopOf="@+id/container_bar"
            app:layout_constraintVertical_bias="0.782" />

        <ImageView
            android:id="@+id/logo_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/menu"
            app:layout_constraintBottom_toBottomOf="@+id/container_bar"
            app:layout_constraintEnd_toEndOf="@+id/container_bar"
            app:layout_constraintHorizontal_bias="0.159"
