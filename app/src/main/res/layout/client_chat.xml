            app:layout_constraintTop_toTopOf="@+id/container_bar"
            app:layout_constraintVertical_bias="0.102" />

        <ImageView
            android:id="@+id/logo_shopping_cart"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/shopping_cart"
            app:layout_constraintBottom_toBottomOf="@+id/container_bar"
            app:layout_constraintEnd_toEndOf="@+id/container_bar"
            app:layout_constraintHorizontal_bias="0.818"
            app:layout_constraintStart_toStartOf="@+id/container_bar"
            app:layout_constraintTop_toTopOf="@+id/container_bar"
            app:layout_constraintVertical_bias="0.102" />

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="122dp"
            android:layout_height="23dp"
            android:ems="10"
            android:inputType="text"
            android:text="Name"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="701dp" />

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Name"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="69dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


